@page
@model kiraz.com.Pages.IletisimModel
@{
    ViewData["Title"] = "İletişim";
}

<section class="contact">
    <div class="contact__wrapper">
        <h1 class="contact__title">Bize Ulaşın</h1>

        <div class="contact__grid">
            <!-- SOL: İletişim bilgileri kartı -->
            <aside class="contact__card info">
                <div class="contact__brand">
                    <img src="~/images/kiraz_icon.png" alt="" />
                    <h2>İletişim Bilgilerimiz</h2>
                </div>

                <ul class="contact__list">
                    <li>
                        <span class="label">E-posta (Müşteri Hizmetleri)</span>
                        <a href="mailto:destek@kiraz.com">destek@kiraz.com</a>
                    </li>
                    <li>
                        <span class="label">Telefon</span>
                        <span>0 (850) 123 45 67 <small>(Pzt-Cum 09:00–18:00)</small></span>
                    </li>
                    <li>
                        <span class="label">Adres</span>
                        <address>
                            Atatürk Caddesi No: 42 Kepenek Mahallesi, Merkez / Sivas<br />
                            (KİRAZ Mağazası – Showroom & Ofis)
                        </address>
                    </li>
                </ul>

                <div class="contact__quick">
                    <a class="btn-outline" href="mailto:destek@zarifipek.com?subject=Destek Talebi – KİRAZ">E-posta Gönder</a>
                    <a class="btn-outline" href="/SSS">SSS’yi Gör</a>
                </div>
            </aside>

            <!-- SAĞ: Form kartı -->
            <div class="contact__card form">
                <h2 class="form__title">Bize Mesaj Gönderin</h2>

                <form method="post" novalidate>
                    <div class="form__row">
                        <label for="ad">Adınız Soyadınız</label>
                        <input id="ad" name="ad" type="text" required />
                    </div>

                    <div class="form__row">
                        <label for="email">E-posta Adresiniz</label>
                        <input id="email" name="email" type="email" required />
                    </div>

                    <div class="form__row">
                        <label for="mesaj">Mesajınız</label>
                        <textarea id="mesaj" name="mesaj" rows="5" required></textarea>
                    </div>

                    <button type="submit" class="btn-primary">Mesajı Gönder </button>
                   
                </form>
            </div>
        </div>
    </div>
</section>
