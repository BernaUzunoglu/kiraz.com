@model kiraz.com.Models.ProductVM

<div class="p-card">
  <img class="cherry-badge" src="~/images/kiraz_icon.png" alt="" />

  <!-- Görsel: Detay sayfasına gider -->
  <a class="p-card__media"
     asp-page="/Urun/Detay"
     asp-route-id="@Model.Id"  
     asp-route-slug="@Model.Slug"  
     aria-label="@Model.Name">
    <img class="p-card__thumb" src="@Url.Content(Model.MainImage)" alt="@Model.Name" />
  </a>

  <div class="p-card__body">
    <h3 class="p-card__title">
      <a asp-page="/Urun/Detay"
         asp-route-id="@Model.Id"
         asp-route-slug="@Model.Slug"
         style="text-decoration:none;color:inherit">@Model.Name</a>
    </h3>

    <p class="p-card__desc">@Model.Description</p>
    <div class="p-card__price">@Model.Price.ToString("0.##") TL</div>

    <!-- Sepete Ekle formu (ayrı, linkleri etkilemez) -->
    <form method="post" asp-page="/Sepet" asp-page-handler="Add" style="display:inline;">
      <input type="hidden" name="id" value="@Model.Id" />
      <input type="hidden" name="name" value="@Model.Name" />
      <input type="hidden" name="price" value="@Model.Price" />
      <input type="hidden" name="imageUrl" value="@Url.Content(Model.MainImage)" />
      <button type="submit" class="p-card__cta">Sepete Ekle</button>
    </form>
  </div>
</div>
